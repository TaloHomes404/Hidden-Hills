<UserControl x:Class="Hidden_Hills.MVVM.View.PackageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hidden_Hills.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Foreground="Transparent">

    <UserControl.Resources>
        <Style x:Key="ColorfulIcon" TargetType="Image">
            <Setter Property="Source" Value="/Images/package-export.png"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Value, ElementName=progressBar}" Value="100">
                    <Setter Property="Source" Value="/Images/package-export.png"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="10">
        <!-- Górne panele z gradientem -->
        <StackPanel Orientation="Horizontal" Margin="0,8,0,15" HorizontalAlignment="Center">
            <!-- Panel czasu śledzenia -->
            <Border Width="300" Height="150" Margin="8,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="DarkSlateBlue" Offset="0.0"/>
                        <GradientStop Color="DarkMagenta" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,150"/>
                </Border.Clip>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Center">
                    <Image Source="/Images/timer.png" Width="82" Height="82" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Tracking time:" Foreground="White" FontSize="18"/>
                        <ComboBox Margin="0,10,0,0" SelectedIndex="0">
                            <ComboBoxItem>30 seconds</ComboBoxItem>
                            <ComboBoxItem>1 minute</ComboBoxItem>
                            <ComboBoxItem>5 minutes</ComboBoxItem>
                            <ComboBoxItem>15 minutes</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Panel wyboru portu -->
            <Border Width="300" Height="150" Margin="8,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="DarkSlateBlue" Offset="0.0"/>
                        <GradientStop Color="DarkMagenta" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,150"/>
                </Border.Clip>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Center">
                    <Image Source="/Images/cloud-network.png" Width="82" Height="82" Margin="0,0,16,0"/>
                    <StackPanel>
                        <TextBlock Text="Select PORT:" Foreground="White" FontSize="18"/>
                        <ComboBox Margin="0,10,0,0" SelectedIndex="0">
                            <ComboBoxItem Content="TCP"/>
                            <ComboBoxItem Content="VOIP Packet"/>
                            <ComboBoxItem Content="UDP"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Nowy przycisk Capture Packets -->
        <Button Content="Capture Packets" 
                Width="200" 
                Height="40" 
                Margin="0,20" 
                HorizontalAlignment="Center"
                Background="#FF4444" 
                Foreground="White"
                FontWeight="Bold"/>

        <!-- Sekcja progresu -->
        <StackPanel Orientation="Horizontal" Margin="8,25,8,0" HorizontalAlignment="Center">
            <!-- Dynamiczna ikona -->
            <Image Style="{StaticResource ColorfulIcon}" 
                   Width="128" 
                   Height="128" 
                   Margin="0,0,20,0"/>

            <!-- Progress Bar -->
            <ProgressBar x:Name="progressBar" 
                       Value="0" 
                       Width="200" 
                       Height="15" 
                       Margin="0,0,20,0"
                       Foreground="#FF4444" 
                       Background="#33000000"
                       BorderThickness="1"/>

            <!-- Przyciski akcji -->
            <StackPanel VerticalAlignment="Center">
                <Button Content="Save PCAP" 
                      Width="125" 
                      Height="35" 
                      Margin="0,0,0,10"
                      Background="#FF4444" 
                      Foreground="White"/>
                <Button Content="Cancel" 
                      Width="125" 
                      Height="35"
                      Background="#FF4444" 
                      Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
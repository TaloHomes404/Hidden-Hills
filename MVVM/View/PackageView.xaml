<UserControl x:Class="Hidden_Hills.MVVM.View.PackageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hidden_Hills.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Text="Packet Analyzer"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- Separator -->
        <Separator Style="{StaticResource LineSeparator}" Grid.Row="1"/>

        <!-- Główna sekcja -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="20">

            <!-- Wybór czasu przechwytywania -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Tracking time (s):"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <ComboBox ItemsSource="{Binding AvailableDurations}"
                          SelectedItem="{Binding CaptureDuration}"
                          Width="100"
                          Margin="5"/>
            </StackPanel>

            <!-- Wybór portu -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Select Port:"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="5"/>
                <ComboBox ItemsSource="{Binding AvailablePorts}"
                          SelectedItem="{Binding SelectedPort}"
                          Width="100"
                          Margin="5"/>
            </StackPanel>

            <!-- ProgressBar -->
            <ProgressBar Value="{Binding Progress}"
                         Width="200"
                         Height="20"
                         Foreground="Orange"
                         Margin="10"/>

            <!-- Przycisk Capture -->
            <Button Content="Capture Packets"
                    Command="{Binding CaptureCommand}"
                    Style="{StaticResource PrimaryButton}"/>

            <!-- Przyciski Save PCAP i Cancel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Save PCAP"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="{Binding IsCaptureCompleted}"/>

                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="{Binding IsCapturing}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

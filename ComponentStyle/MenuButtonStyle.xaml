<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModel="clr-namespace:Hidden_Hills.MVVM.ViewModel"
                    xmlns:view="clr-namespace:Hidden_Hills.MVVM.View"
                    >
    <!-- Styling resource for menu buttons, hover-click func design -->
    <Style x:Key="MenuButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image x:Name="Icon" 
                               Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                               Width="64" Height="64" Margin="10"/>
                        <TextBlock x:Name="ButtonText" Text="{TemplateBinding Content}" 
                                   FontSize="18" VerticalAlignment="Center" Foreground="Black"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- Zmiana koloru po najechaniu -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonText" Property="Foreground" Value="RoyalBlue"/>
                            <Setter TargetName="Icon" Property="Opacity" Value="0.8"/>
                            <!-- Zmiana przezroczystości ikony -->
                        </Trigger>
                        <!-- Zmiana koloru po wciśnięciu -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonText" Property="Foreground" Value="White"/>
                            <Setter TargetName="Icon" Property="Opacity" Value="0.5"/>
                            <!-- Zmiana przezroczystości ikony -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>